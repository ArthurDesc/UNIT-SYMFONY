{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.password) }}
        </div>
    </div>
    <div class="mb-3">
        {{ form_row(form.roles) }}
    </div>

    <div class="text-end">
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
